@model ExercicioCadastro.Models.Aluno

<h2>Cadastro de Alunos </h2>

<form class="form-horizontal" asp-controller="Aluno" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="MatriculaId" placeholder="Nome">
    <input type="text" class="form-control" asp-for="Nome" placeholder="Nome">
    <input type="text" class="form-control" asp-for="Sobrenome" placeholder="Sobrenome">
    <input type="text" class="form-control" asp-for="Cpf" placeholder="CPF">
    <input type="text" class="form-control" asp-for="Curso" placeholder="Curso">
    <button class="btn btn-success">Cadastrar</button>

</form>